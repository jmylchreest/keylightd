{
	"info": {
		"_postman_id": "keylightd-api",
		"name": "keylightd API",
		"description": "Collection for interacting with the keylightd HTTP API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "API Keys",
			"item": [
				{
					"name": "Create API Key",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_api_key}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"My New Web Key\",\n    \"expires_in_seconds\": 0\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/apikeys",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "apikeys"]
						}
					}
				},
				{
					"name": "List API Keys",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/apikeys",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "apikeys"]
						}
					}
				},
				{
					"name": "Delete API Key",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/apikeys/{{api_key_to_delete}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "apikeys", "{{api_key_to_delete}}"]
						}
					}
				}
			]
		},
		{
			"name": "Lights",
			"item": [
				{
					"name": "List Lights",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/lights",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "lights"]
						}
					}
				},
				{
					"name": "Get Light Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/lights/{{light_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "lights", "{{light_id}}"]
						}
					}
				},
				{
					"name": "Set Light State",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"on\": true,\n    \"brightness\": 75,\n    \"temperature\": 4500\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/lights/{{light_id}}/state",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "lights", "{{light_id}}", "state"]
						}
					}
				}
			]
		},
		{
			"name": "Groups",
			"item": [
				{
					"name": "List Groups",
					"request": {
						"method": "GET",
						"header": [
