							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/groups",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "groups"]
						}
					}
				},
				{
					"name": "Create Group",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Streaming Background\",\n    \"light_ids\": [\"{{light_id}}\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/groups",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "groups"]
						}
					}
				},
				{
					"name": "Get Group Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/groups/{{group_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "groups", "{{group_id}}"]
						}
					}
				},
				{
					"name": "Set Group State",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"on\": true,\n    \"brightness\": 75,\n    \"temperature\": 4500\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/groups/{{group_id}}/state",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "groups", "{{group_id}}", "state"]
						}
					}
				},
				{
					"name": "Delete Group",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/groups/{{group_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "groups", "{{group_id}}"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:9123",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "your_api_key_here",
			"type": "string"
		},
		{
			"key": "admin_api_key",
			"value": "your_admin_api_key_here",
			"type": "string"
		},
		{
			"key": "light_id",
			"value": "elgato-key-light-AB12",
			"type": "string"
		},
		{
			"key": "group_id",
			"value": "group-1678886400000000000",
			"type": "string"
		},
		{
			"key": "api_key_to_delete",
